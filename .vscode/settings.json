{
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "boundary",
    "window.zoomLevel": 1,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "mytool/.*": true,
        "mytool/*.md": true,
    },
    "files.autoGuessEncoding": false,
    "files.encoding": "utf8",
    "files.autoSave": "onFocusChange",
    "window.title": "${activeEditorLong}",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "vsicons.dontShowNewVersionMessage": true,
    // git定时自动获取
    "git.autofetch": true,

    //// python
    "python.pythonPath": "/usr/bin/python3",
    // pep8
    // "python.linting.pep8Enabled": true,
    // "python.formatting.autopep8Args": [
    //     "--max-line-length=80"
    //     // "--select=E20,E211,E22,E224,E226,E227,E228,E231,W291"
    // ],
    // pylint
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--disable=C0111"
    ],
    
    
    //// vscode-icons 文件图标
    "workbench.iconTheme": "vscode-icons",
    
    //// vscode-fileheader 插入文件头
    "fileheader.tpl": "# -*- coding:utf-8 -*-\r\n\"\"\"\r\n@Author: {author}\r\n@Date: {createTime}\r\n@Desc: \r\n\"\"\"\r\n",
    "fileheader.Author": "lamborghini",
    "fileheader.LastModifiedBy": "lamborghini",

    //// markdown截图保存路径 Paste Image 
    //截图保存的文件夹路径
    "pasteImage.path": "${projectRoot}/image",
    //截图显示的相对路径URL
    "pasteImage.basePath": "${currentFileDir}",
    //分隔符标准
    "pasteImage.forceUnixStyleSeparator": true
}