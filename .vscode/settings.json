{
    "window.zoomLevel": 1,
    "files.autoGuessEncoding": true,
    "workbench.iconTheme": "vscode-icons",
    "git.enableSmartCommit": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/*.pyc": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "mytool/.*": true
    },
    "editor.tabSize": 4,
    "editor.renderWhitespace": "boundary",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\Sysnative\\cmd.exe",

    // pep8
    "python.linting.pep8Enabled": false,
    "python.formatting.autopep8Args": [
        "--max-line-length=80"
        // "--select=E20,E211,E22,E224,E226,E227,E228,E231,W291"
    ],

    // pylint
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": [
        "--disable=C0111"
    ],

    // fileheader相关
    "fileheader.Author": "lamborghini1993",
    "fileheader.tpl": "# -*- coding: utf-8 -*-\r\n\"\"\"\r\n@Author: {author}\r\n@Date: {createTime}\r\n@Last Modified by:   {lastModifiedBy}\r\n@Last Modified time: {updateTime}\r\n@Desc:\r\n\"\"\"\r\n",
    "fileheader.LastModifiedBy": "lamborghini1993",
    "vsicons.dontShowNewVersionMessage": true
}